{
    "compilerOptions": {
      "outDir": "./dist/cjs",
      "module": "CommonJS",
      "typeRoots": [
      "./node_modules/@types",
      "./interfaces"
    ],
      "target": "ES2018",
      "declaration": false,
      "declarationMap": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "paths": {
        "@src/*": ["./src/*"]
      },
      "baseUrl": "."
    },
    "include": ["src/**/*"],
  }