{
  "compilerOptions": {
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./interfaces"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist/esm",
    "declaration": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*"],
}