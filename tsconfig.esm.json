{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./interfaces"
    ],
    /* Geração de Declarações */
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    /* Interoperabilidade */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* Aliases */
    "paths": {
      "@src/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
